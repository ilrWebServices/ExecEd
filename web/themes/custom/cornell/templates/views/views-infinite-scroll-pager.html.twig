{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
<ul{{ attributes }}>
  <li class="pager__item">
    <a class="button" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">
        {{ options.button_text }}
    </a>
  </li>
  <li>
    <span class="pager__spinner" aria-hidden="true"></span>
  </li>
</ul>
{% endif %}
